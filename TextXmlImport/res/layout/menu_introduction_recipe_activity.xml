<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#A0000000">
    <LinearLayout 
	    android:id="@+id/forumula_leading_in_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="320dip"
	    android:layout_gravity="center"
	    android:background="@color/page_bg"
	    android:orientation="vertical" >
	    <TextView
	         android:id="@+id/menu_introduction_data_title_id"
	         android:layout_width="match_parent"
	         android:layout_height="30dip"
	         android:paddingLeft="@dimen/popup_menu_outside_padding"
	         android:gravity="center|left"
	         android:background="@color/recipe_dialog_button_bg_color"
	         android:text="@string/menu_introduction_updata_title_text"
	         android:textColor="@color/white"
	         android:textSize="20sp" />
	
	    <ListView
	        android:id="@+id/menu_introduction_data_list_id"
	        android:layout_width="fill_parent"
	        android:layout_height="210dip"
	        android:paddingLeft="@dimen/popup_menu_outside_padding"
	        android:paddingRight="@dimen/popup_menu_outside_padding"
	        android:choiceMode="singleChoice"
	        android:divider="@color/white"
	        android:cacheColorHint="#00000000"
	        android:scrollbars="none"
		    android:fadingEdge="none"
	        android:dividerHeight="5dip" />
	    
	    <TextView
	         android:id="@+id/menu_introduction_data_text_error_id"
	         android:layout_width="match_parent"
	         android:layout_height="@dimen/recipe_edit_text_height"
	         android:paddingLeft="@dimen/popup_menu_outside_padding"
	         android:gravity="center|left"
	         android:text="@string/menu_introduction_updata_title_text"
	         android:textColor="@color/warning_red"
	         android:textSize="16sp" />
	   
	
		<LinearLayout
		    android:id="@+id/menu_introduction_data_layout_cancel_id"  
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_gravity="bottom"	  
		    android:layout_weight="1"  
		    android:orientation="vertical"
		    android:background="@color/white">
		    <View 
			    android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="#D3D3D4"/>    
	      	<Button   
	          android:id="@+id/menu_introduction_data_button_cancel_id"  
	          android:layout_width="match_parent"  
	          android:layout_height="@dimen/recipe_button_height" 
	          android:background="@color/white"              
	          android:textColor="@color/ranking_font_color"
	          android:textSize="18sp"  
	          android:text="@string/main_cancel"/>
	     </LinearLayout>
	</LinearLayout>
</LinearLayout>