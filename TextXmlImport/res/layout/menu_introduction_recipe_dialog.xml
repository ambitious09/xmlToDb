<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center"
  android:background="#A0000000">
  
    <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:orientation="vertical"
		  android:gravity="center"
		  android:background="@color/page_bg">
	     <Button
	        android:id="@+id/introduction_recipe_dialog_text_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/popup_menu_outside_padding"
	        android:layout_marginBottom="@dimen/popup_menu_outside_padding"
	        android:layout_gravity="center"
	        android:background="@color/page_bg"
	        android:textColor="#087E9F"
	        android:textSize="18dip"/>
		 <View 
		    android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D3D3D4"/>    
	
		 <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_gravity="bottom"	  
		    android:orientation="horizontal"
		    android:background="@color/white"
		    >
	      	<Button   
	          android:id="@+id/introduction_recipe_dialog_button_cancel_id"  
	          android:layout_width="match_parent"  
	          android:layout_height="@dimen/recipe_button_height" 
	          android:layout_weight="1"
	          android:background="@color/white"              
	          android:textColor="@color/ranking_font_color"
	          android:textSize="18dip"  
	          android:text="@string/main_cancel"/>
	      	
	      	<View 
	      	   android:layout_width="1dip"  
	           android:layout_height="match_parent"
	           android:background="#C6C7C7"/>"
	      	
	      	<Button   
	          android:id="@+id/introduction_recipe_dialog_button_ok_id"  
	          android:layout_width="match_parent"  
	          android:layout_height="@dimen/recipe_button_height" 
	          android:layout_weight="1"
	          android:background="@color/white"       
	          android:textColor="@color/ranking_font_color"
	          android:textSize="18dip"  
	          android:text="@string/main_ok"/>
	     </LinearLayout>
	  </LinearLayout>
</LinearLayout>